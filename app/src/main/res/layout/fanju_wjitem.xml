<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fanju_header_cradview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    app:contentPadding="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <com.hema.myplayer.util.SelectableRoundedImageView
            android:id="@+id/fanju_wj_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@mipmap/userlogo"
            app:sriv_left_top_corner_radius="0dp"
            app:sriv_right_top_corner_radius="0dp"
            />

        <TextView
            android:id="@+id/fanju_wj_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="追番"
            android:lines="3"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>